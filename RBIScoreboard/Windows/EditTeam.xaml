<Window x:Class="RBIScoreboard.Windows.EditTeam"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RBIScoreboard.Windows"
        mc:Ignorable="d"
        Title="Edit Team - RBI Scoreboard" Height="500" Width="500">
    <StackPanel>
        <TextBox x:Name="TeamName" FontSize="48" Text="{Binding Name}"></TextBox>
        <TextBox x:Name="LogoUrl" FontSize="24" Text="{Binding LogoURL}"></TextBox>

        <Button Click="Save">Save</Button>
    </StackPanel>
</Window>
